@model List< BillGenerator.Models.Biller>

<h2>Biller List</h2>
<a class="btn btn-primary" asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th>Bill Type</th>
            <th>Status</th>
            <th>Metadata</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var biller in Model)
        {
            <tr>
                <td>@biller.Id</td>
                <td>@biller.Name</td>
                <td>@biller.Code</td>
                <td>@biller.BillType</td>
                <td>@(biller.Status.HasValue ? biller.Status.Value.ToString() : "")</td>
                <td>@biller.Metadata</td>
                <td>@(biller.CreatedAt.HasValue ? biller.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss") : "")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@biller.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@biller.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@biller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

